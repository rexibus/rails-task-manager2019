<h1><%= @task.title %></h1>
<div class="details-colored">
  <p><%= @task.details %></p>
</div>
<p>
  <% if @task.completed %>
    <i class="far fa-check-square"></i> <%= " This task is completed" %>
    <% else %>
    <i class="far fa-square"></i><%= " This task is not completed" %>
  <% end %>
</p>

<p> <%=link_to "Edit task", edit_task_path %></p>

<p>
  <%= link_to "Back to list", tasks_path %>
</p>
